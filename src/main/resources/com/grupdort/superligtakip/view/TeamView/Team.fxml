<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="400.0" stylesheets="@Teamstyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupdort.superligtakip.controller.TeamController">
    <children>
        <VBox style="-fx-background-color: #121212;">
            <children>
                <StackPane prefHeight="160.0" styleClass="header-background">
                    <children>
                        <AnchorPane style="-fx-background-color: rgba(0,0,0,0.5);" />

                        <VBox spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnBack" onAction="#handleBack" styleClass="back-button">
                                            <graphic>
                                                <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" styleClass="back-icon" scaleX="1.0" scaleY="1.0"/>
                                            </graphic>
                                        </Button>

                                        <AnchorPane HBox.hgrow="ALWAYS" />

                                        <ComboBox fx:id="seasonComboBox" prefWidth="130.0" styleClass="combo-box" />
                                    </children>
                                    <padding><Insets right="15.0" top="15.0" left="15.0"/></padding>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <ImageView fx:id="imgTeamLogo" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
                                        <Label fx:id="lblTeamName" text="Takım Adı" textFill="WHITE">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                        </Label>
                                    </children>
                                    <padding><Insets left="20.0" top="5.0" /></padding>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </StackPane>

                <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 15;">
                    <children>
                        <ToggleButton fx:id="tabMatches" minWidth="120.0" selected="true" styleClass="tab-button" text="Fikstür">
                            <toggleGroup>
                                <ToggleGroup fx:id="viewTabs" />
                            </toggleGroup>
                        </ToggleButton>
                        <ToggleButton fx:id="tabSquad" minWidth="120.0" styleClass="tab-button" text="Kadro" toggleGroup="$viewTabs" />
                    </children>
                </HBox>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #121212; -fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="contentContainer" spacing="10.0" style="-fx-background-color: #121212; -fx-padding: 10;" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>

        <VBox fx:id="loadingOverlay" alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.8);" visible="false">
            <children>
                <Label text="Yükleniyor..." textFill="WHITE">
                    <font><Font size="14.0" /></font>
                </Label>
            </children>
        </VBox>
    </children>
</StackPane>