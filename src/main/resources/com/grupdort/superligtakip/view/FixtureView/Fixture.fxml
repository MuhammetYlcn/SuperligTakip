<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600" prefWidth="400" stylesheets="@Fixturestyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupdort.superligtakip.controller.FixtureController">

    <VBox fx:id="mainContent" style="-fx-background-color: #121212;">

        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #1E1E1E; -fx-padding: 10;">
            <Button fx:id="menuButton" onAction="#handleMenuButton" style="-fx-background-color: transparent; -fx-cursor: hand;" text="☰" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Button>
            <VBox HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Trendyol Süper Lig" textFill="WHITE" />
                <Label style="-fx-font-size: 11;" text="Fikstür" textFill="#b3b3b3" />
            </VBox>
            <ComboBox fx:id="seasonComboBox" prefWidth="135" style="-fx-background-color: #333333;" />
        </HBox>

        <HBox alignment="CENTER" spacing="15" styleClass="week-navigation-bar">
            <Button fx:id="btnPrevWeek" onAction="#handlePrevWeek" styleClass="week-nav-button" text="◄" />
            <Label fx:id="lblCurrentWeek" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="1. Hafta" textFill="WHITE" />
            <Button fx:id="btnNextWeek" onAction="#handleNextWeek" styleClass="week-nav-button" text="►" />
        </HBox>

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="matchListContainer" spacing="10" style="-fx-padding: 10; -fx-background-color: #121212;" />
            </content>
        </ScrollPane>
    </VBox>

    <fx:include fx:id="sidebarComponent" source="../SidebarView/Sidebar.fxml" />

    <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.75);" visible="false">
        <ProgressIndicator prefHeight="50" prefWidth="50" style="-fx-progress-color: white;" />
        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Fikstür Yükleniyor..." textFill="WHITE" />
    </VBox>

</StackPane>