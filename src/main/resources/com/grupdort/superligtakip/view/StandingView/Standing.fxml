<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600" prefWidth="400" stylesheets="@Standingstyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupdort.superligtakip.controller.StandingController">

    <VBox fx:id="mainContent" style="-fx-background-color: #121212;">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #1E1E1E; -fx-padding: 10;">
            <Button fx:id="menuButton" onAction="#handleMenuButton" style="-fx-background-color: transparent; -fx-cursor: hand;" text="☰" textFill="WHITE">
                <font><Font name="System Bold" size="18.0" /></font>
            </Button>

            <VBox HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Trendyol Süper Lig" textFill="WHITE" />
                <Label style="-fx-font-size: 11;" text="Puan Durumu" textFill="#b3b3b3" />
            </VBox>
            <ComboBox fx:id="seasonComboBox" prefWidth="135" style="-fx-background-color: #333333;" />
        </HBox>

        <TableView fx:id="standingsTable" styleClass="dark-table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colRank" prefWidth="40" style="-fx-alignment: CENTER;" text="Sıra" />
                <TableColumn fx:id="colTeam" prefWidth="120" style="-fx-alignment: CENTER-LEFT;" text="Takım" />
                <TableColumn fx:id="colPlayed" prefWidth="30" style="-fx-alignment: CENTER;" text="O" />
                <TableColumn fx:id="colWon" prefWidth="30" style="-fx-alignment: CENTER;" text="G" />
                <TableColumn fx:id="colDrawn" prefWidth="30" style="-fx-alignment: CENTER;" text="B" />
                <TableColumn fx:id="colLost" prefWidth="30" style="-fx-alignment: CENTER;" text="M" />
                <TableColumn fx:id="colGF" prefWidth="30" style="-fx-alignment: CENTER;" text="A" />
                <TableColumn fx:id="colGA" prefWidth="30" style="-fx-alignment: CENTER;" text="Y" />
                <TableColumn fx:id="colAV" prefWidth="30" style="-fx-alignment: CENTER;" text="Av" />
                <TableColumn fx:id="colPoints" prefWidth="40" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="P" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>

        <VBox spacing="6" style="-fx-padding: 12; -fx-background-color: #1E1E1E;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Açıklamalar:" textFill="WHITE" />
            <HBox spacing="10"><Circle fill="#2ecc71" radius="4.5" /><Label text="Şampiyonlar Ligi" textFill="#b3b3b3" /></HBox>
            <HBox spacing="10"><Circle fill="#f1c40f" radius="4.5" /><Label text="Şampiyonlar Ligi Eleme" textFill="#b3b3b3" /></HBox>
            <HBox spacing="10"><Circle fill="DEEPSKYBLUE" radius="4.5" /><Label text="Avrupa Ligi Eleme" textFill="#b3b3b3" /></HBox>
            <HBox spacing="10"><Circle fill="#9b59b6" radius="4.5" /><Label text="Konferans Ligi Eleme" textFill="#b3b3b3" /></HBox>
            <HBox spacing="10"><Circle fill="RED" radius="4.5" /><Label text="Küme Düşme" textFill="#b3b3b3" /></HBox>
        </VBox>
    </VBox>

    <fx:include fx:id="sidebarComponent" source="../SidebarView/Sidebar.fxml" />

    <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.75);" visible="false">
        <ProgressIndicator prefHeight="50" prefWidth="50" style="-fx-progress-color: white;" />
        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Veriler Yükleniyor..." textFill="WHITE" />
    </VBox>

</StackPane>