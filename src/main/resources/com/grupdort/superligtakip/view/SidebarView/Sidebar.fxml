<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="menuOverlay"
            style="-fx-background-color: rgba(0,0,0,0.3);"
            visible="false"
            mouseTransparent="true"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.grupdort.superligtakip.controller.SidebarController">

    <children>
        <VBox fx:id="sidebar" prefHeight="600.0" prefWidth="250.0" spacing="10.0"
              style="-fx-background-color: #1f1f1f; -fx-effect: dropshadow(three-pass-box, black, 10, 0, 0, 0);"
              translateX="-260.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>

            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="mackolik" textFill="WHITE">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>

            <Button fx:id="btnPuanDurumu" maxWidth="Infinity" styleClass="menu-item-button" text="Puan Durumu" />
            <Button fx:id="btnFikstur" maxWidth="Infinity" styleClass="menu-item-button" text="Fikstür" />
            <Button fx:id="btnGolKralligi" maxWidth="Infinity" styleClass="menu-item-button" text="Gol Krallığı" />
            <Button fx:id="btnAsistKralligi" maxWidth="Infinity" styleClass="menu-item-button" text="Asist Krallığı" />

            <VBox VBox.vgrow="ALWAYS" />
            <Label text="v1.0.0" textFill="#555555" />
        </VBox>
    </children>
</AnchorPane>